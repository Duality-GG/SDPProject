#:import utils kivy.utils
#:import Factory kivy.factory.Factory
#notes

#size_hint_y refers to the sizing of the height of the widget proportion to the program

<ColoredLabel@Label>:
    color: utils.get_color_from_hex('#FFFFFF')
    size_hint_y: None
    height: '48dp'

<SettingsTextInput@TextInput>:
    multiline: False
    padding_y: (self.height - self.line_height) / 2
    size_hint_y: None
    height: '48dp'
    background_normal: ''
    background_color: utils.get_color_from_hex('#303030')
    foreground_color: utils.get_color_from_hex('#AEFFFF')

ScreenManager:
    MainScreen:
    FirstScreen:
    SecondScreen:
    ThirdScreen:
    SettingsScreen:

<CustomButton@Button>:
    background_color: (0, 0, 0, 0)  # remove default background
    canvas.before:
        Color:
            rgba: (0.2, 0.6, 0.8, 1)  # Set your desired background color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]  # Adjust for rounded corners

<MainScreen>:
    FloatLayout:
        Image:
            source: 'C://Users/Tommy/Downloads/ClassesSeniorYear/SDP/mainlab/images/nasa.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
    BoxLayout:
        orientation: 'vertical'
        # Container for logos
        # Title label at the top
        Label:
            text: 'UMass Amherst Team 05 SDP'
            size_hint_y: None
            height: '48dp'
            font_size: '20sp'

        # Spacer to fill the space between the title and buttons
        Widget:
            size_hint_y: 1

        # AnchorLayout for the buttons at the bottom
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'

            GridLayout:
                cols: 2
                size_hint: None, None
                size: '400dp', '150dp'  # Adjust size as needed
                padding: 5
                spacing: 10

                CustomButton:
                    text: 'Constellation'
                    on_release: app.root.current = 'first'

                CustomButton:
                    text: 'Presets'
                    on_release: app.root.current = 'second'

                CustomButton:
                    text: 'Freelook'
                    on_release: app.root.current = 'third'

                CustomButton:
                    text: 'User Inputs'
                    on_release: app.root.current = 'settings'                
                # Add more buttons as needed

