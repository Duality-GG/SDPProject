            source: 'C://Users/Tommy/Downloads/ClassesSeniorYear/SDP/mainlab/images/nasa4.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
    BoxLayout:
        orientation: 'vertical'

        # Top part including the Back button and Start/Stop Camera
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            orientation: 'horizontal'

            CustomButton:
                text: '< Back'
                on_release: app.root.current = 'main'
                size_hint_x: None
                width: '100dp'

            CustomButton:
                text: 'Start FreeLook Camera'
                on_press: root.start_camera()
                size_hint_x: 1

            CustomButton:
                text: 'Stop FreeLook Camera'
                on_press: root.stop_camera()
                size_hint_x: 1

        # Middle part for Camera View
        BoxLayout:
            size_hint_y: 0.5
            Image:
